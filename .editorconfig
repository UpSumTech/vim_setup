root = true

quote_type = auto
spaces_around_operators = true
spaces_in_brackets = false
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

[**.js]
charset = utf-8

[*.rb]
charset = utf-8

[**.css]
indent_style = space

[**.html]
indent_style = space
max_char = 80
brace_style = expand

[{package.json,.travis.yml}]
indent_style = space
